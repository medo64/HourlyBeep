{
    "name": "hourly-beep",
    "displayName": "Hourly Beep",
    "description": "A gentle beep every hour.",
    "icon": "ICON.png",
    "version": "0.1.0",
    "publisher": "medo64",
    "galleryBanner": {
        "color": "#373E6D",
        "theme": "dark"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/medo64/HourlyBeep/issues/",
        "email": "jmedved@jmedved.com"
    },
    "homepage": "https://medo64.com/HourlyBeep",
    "repository": {
        "url": "https://github.com/medo64/HourlyBeep/"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "hour",
        "beep",
        "casio"
    ],
    "engines": {
        "vscode": "^1.31.0"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onStartupFinished",
        "onCommand:hourlybeep.test"
    ],
    "contributes": {
        "commands": [
            {
                "command": "hourlybeep.test",
                "title": "Test Hourly Beep"
            }
        ],
        "configuration": [
            {
                "type": "object",
                "title": "Hourly Beep",
                "properties": {
                    "hourlybeep.volume": {
                        "scope": "application",
                        "description": "Volume between 0 and 100 for the beep.",
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100,
                        "default": 84
                    },
                    "hourlybeep.minutes": {
                        "scope": "application",
                        "description": "Minutes at which beep will sound.",
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 59
                        },
                        "default": [ 0 ]
                    }
                }
            }
        ]
    },
    "scripts": {},
    "devDependencies": {
        "eslint": "^8.8.0",
        "vsce": "^2.6.7",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "audio-loader": "^1.0.3",
        "sound-play": "^1.1.0"
    }
}
